<form action="/buses_journeys/new" method="post">
	<div class="form-group">
		<label for="bus[number_of_seats]">Number of seats</label>
		<input type="integer" name="bus[number_of_seats]" class="form-control" placeholder="Number of seats">		
	</div>

	<div class="form-group">
    	<label for="bus[departure_city]">Departure city</label>
    	<input type="text" name="bus[departure_city]" class="form-control" placeholder="Departure city">
  	</div>
	
	<div class="form-group">
    	<label for="bus[time_of_departure]">Time of departure</label>
    	<input type="datetime-local" name="bus[time_of_departure]" class="form-control" placeholder="Time of departure">
  	</div>

  	<div class="form-group">
    	<label for="bus[arrival_city]">Arrival city</label>
    	<input type="text" name="bus[arrival_city]" class="form-control" placeholder="Arrival city">
  	</div>

	<div class="form-group">
    	<label for="bus[time_of_arrival]">Time of arrival</label>
    	<input type="datetime-local" name="bus[time_of_arrival]" class="form-control" placeholder="Time of arrival">
  	</div>

	<button type="submit" class="btn btn-primary">Submit</button>

</form>