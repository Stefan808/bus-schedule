        <%if logged_in? %>
          <ul class="nav navbar-nav">
            <li><a href="/users/<%= current_user.id%>">Profile</a></li>
          </ul>
          <%if can? :manage, :all%>
          <ul class="nav navbar-nav">
            <li><a href="/buses_journeys/new">Add bus journey</a></li>
